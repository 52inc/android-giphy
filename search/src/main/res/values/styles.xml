<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GiphySearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="ThemeOverlay.GiphySearch.Search" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.GiphySearch.SearchView.Full</item>
        <item name="searchViewStyle">@style/Widget.GiphySearch.Compat.SearchView.Full</item>
    </style>

    <style name="Widget.GiphySearch.SearchView.Full" parent="android:style/Widget.Material.SearchView">
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.GiphySearch.Compat.SearchView.Full" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>

</resources>